# SOC Onboarding Environment Configuration
# Copy this file to .env and fill in your values

# App Settings
DEBUG=false
API_VERSION=v1

# Multi-Tenant App Registration (from your Azure AD)
# This is YOUR app that customers consent to
MULTI_TENANT_APP_CLIENT_ID=your-app-client-id
MULTI_TENANT_APP_CLIENT_SECRET=your-app-client-secret

# Cosmos DB
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE_NAME=soc_onboarding

# Key Vault (for production secrets)
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application Insights (optional)
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx;IngestionEndpoint=xxx

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:5175,http://localhost:3000
